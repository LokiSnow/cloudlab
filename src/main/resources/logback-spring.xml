<configuration>
	<springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="undefinedAppName" />
	<springProperty scope="context" name="LOG_PATH" source="logging.file.path" defaultValue="/data/logs" />
	<springProperty scope="context" name="LEVEL" source="logging.level.root" defaultValue="INFO" />
	<property name="DEFAULT_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} ${LOG_LEVEL_PATTERN:-%5p} ${PID:- } --- [%X{ctxLogId}][%t] %-40.40logger{39} : %m%n" />
	<property name="DIGEST_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} ${LOG_LEVEL_PATTERN:-%5p} ${PID:- } --- [%X{ctxLogId}][%t] - %msg%n" />
	<property name="SERVICE_DIGEST_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} ${LOG_LEVEL_PATTERN:-%5p} ${PID:- } --- [%X{ctxLogId}][%t] - %msg%n" />
	<property name="STAT_PATTERN" value="%d - %msg%n" />
	<property name="LEVEL_DIGEST" value="${LEVEL}" />
	<property name="CHARSET" value="UTF-8" />
    
    <!-- Appenders -->
    <!-- Appenders : Commons -->
    <appender name="DEFAULT"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/default.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/%d{yyyyMMdd}/default.log
            </fileNamePattern>
            <maxHistory>30</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>${DEFAULT_PATTERN}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>
    
    <appender name="ERROR"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/common-error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/%d{yyyyMMdd}/common-error.log
            </fileNamePattern>
            <maxHistory>30</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>${DEFAULT_PATTERN}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>
    
    <!-- Appenders : Digest -->
    <appender name="DAO-DIGEST"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/dao-digest.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/%d{yyyyMMdd}/dao-digest.log
            </fileNamePattern>
            <maxHistory>30</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>${DIGEST_PATTERN}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>
    
    <appender name="SERVICE-DIGEST"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/service-digest.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/%d{yyyyMMdd}/service-digest.log
            </fileNamePattern>
            <maxHistory>30</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>${SERVICE_DIGEST_PATTERN}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>

    <appender name="DAO"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/dao.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/%d{yyyyMMdd}/dao.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>${DEFAULT_PATTERN}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>
    
    <appender name="SERVICE"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/service.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/%d{yyyyMMdd}/service.log
            </fileNamePattern>
            <maxHistory>30</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>${DEFAULT_PATTERN}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>
    
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${DEFAULT_PATTERN}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>
    <!-- Loggers -->
    
    <!-- Loggers : Digest -->
    <logger name="DAO-DIGEST-LOGGER" level="${LEVEL_DIGEST}"
        additivity="false">
        <appender-ref ref="DAO-DIGEST" />
        <appender-ref ref="ERROR" />
    </logger>

    <logger name="SERVICE-DIGEST-LOGGER" level="${LEVEL_DIGEST}"
        additivity="false">
        <appender-ref ref="SERVICE-DIGEST" />
        <appender-ref ref="ERROR" />
    </logger>

    <!-- Loggers : App Details -->
    <logger name="com.citi.cloudlab" level="${LEVEL}"
        additivity="false">
        <appender-ref ref="DEFAULT" />
        <appender-ref ref="ERROR" />
    </logger>

    <logger name="com.citi.cloudlab.service" level="${LEVEL}"
            additivity="false">
        <appender-ref ref="SERVICE" />
        <appender-ref ref="ERROR" />
    </logger>

    <logger name="com.nebula.dao" level="${LEVEL}" additivity="false">
        <appender-ref ref="DAO" />
        <appender-ref ref="ERROR" />
    </logger>
    
    <!-- Loggers : dao -->
    <logger name="software.amazon.awssdk.services.dynamodb" level="${LEVEL}" additivity="false">
        <appender-ref ref="DAO" />
        <appender-ref ref="ERROR" />
    </logger>
    
    <logger name="software.amazon.awssdk.enhanced.dynamodb" level="${LEVEL}" additivity="false">
        <appender-ref ref="DAO" />
        <appender-ref ref="ERROR" />
    </logger>

    <!-- Loggers : misc -->
    <logger name="org.springframework" level="${LEVEL}" additivity="false">
        <appender-ref ref="DEFAULT" />
        <appender-ref ref="ERROR" />
    </logger>
    
    <logger name="org.springframework.boot.web.embedded.netty"
        level="${LEVEL}" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <!-- Loggers : Root Logger -->
    <root level="${LEVEL}">
        <appender-ref ref="ERROR" />
        <appender-ref ref="DEFAULT" />
    </root>
</configuration>
